<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{{title}}}</title>

    <style>
      .topbar { text-align: center; } .form { display: flex; flex-direction:
      column; width: 50%; margin: 0 auto; gap: 10px; } .bottom { text-align:
      center; }
    </style>
  </head>
  <body>

    <div class="topbar">

      <p><a href="{{host}}/logout">Logout</a>
        |
        <a href="{{host}}/">Home</a>
        |
        <a href="{{host}}/profile">Profile</a>
        |
        <a href="{{host}}/products">Products</a>
      </p>

    </div>

    <div>

      <form action="/api/products" method="POST" class="form">
        <label for="name">Name: </label>

        <input type="text" name="name" required />

        <label for="category">Category: </label>

        <input type="text" name="category" required />

        <label for="price">Price: </label>

        <input type="number" name="price" required />

        <label for="stock">Stock: </label>

        <input type="number" name="stock" required />

        <label for="image">Image Url: </label>

        <input type="text" name="image" required />

        <button type="submit" name="submit">Create Product</button>

      </form>

    </div>

  </body>
</html>